<%- include("partials/_header") %>
<!-- body -->
<body class="main-layout inner_page">
  <!-- loader  -->
  <div class="loader_bg">
    <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
  </div>
  <!-- end loader -->

  <!-- header -->
  <%- include("partials/_menu") %>
  <!-- end header inner -->
  <!-- about -->
  <div class="about">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="titlepage text_align_left">
            <h2><%= photo.name %></h2>
            <p><%= photo.description %></p>
            <a class="read_more" href="/users/<%= photo.user._id %>"
              ><%= photo.user.username %></a
            >
            <div style="margin-top: 30px">
              <ul style="display: flex; justify-content: space-between">
                <li>
                  <button>
                    <a
                      style="min-width: 266px"
                      class="read_more"
                      href="#"
                      data-toggle="modal"
                      data-target="#updateModal"
                      >Update</a
                    >
                  </button>
                </li>
                <li>
                  <a
                    style="min-width: 266px"
                    class="read_more"
                    href="/photos/<%= photo._id %>/?_method=DELETE"
                    onclick="return confirm('Do you really want to delete this photo?')"
                    >Delete</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="about_img">
            <figure>
              <img
                style="z-index: 1"
                src="<%= photo.url %>"
                alt="<%= photo.name %>"
              />
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- end about -->
  <!-- end footer -->
  <div
    id="updateModal"
    class="modal fade bd-example-modal-lg"
    tabindex="-1"
    role="dialog"
    aria-labelledby="myLargeModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div style="margin-top: 50px; margin-bottom: 50px" class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="text_align_center">
                <h2
                  style="font-size: 30px; margin-bottom: 20px; color: #d43a8e"
                >
                  Add New Photo
                </h2>
              </div>
            </div>
            <div class="col-md-10 offset-md-1">
              <form
                id="request"
                class="main_form"
                method="POST"
                action="/photos/<%= photo._id %>?_method=PUT"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="col-md-12">
                    <input
                      value="<%= photo.name %>"
                      class="form_control"
                      placeholder="Name"
                      type="text"
                      name="name"
                    />
                  </div>
                  <div class="col-md-12">
                    <textarea
                      name="description"
                      style="height: 150px"
                      class="form_control"
                      placeholder="Description"
                      rows="5"
                    >
                     <%= photo.description %></textarea
                    >
                  </div>

                  <div style="margin-bottom: 20px" class="col-md-12">
                    <input type="file" name="image" class="form-control-file" />
                  </div>

                  <div class="col-md-12">
                    <div class="group_form">
                      <button class="read_more">Update File</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <ul class="menu_footer">
              <li><a href="index.html">Home</a></li>
              <li><a class="active" href="about.html">About</a></li>
              <li><a href="services.html">Services</a></li>
              <li><a href="gallery.html">Gallery</a></li>
              <li><a href="projects.html">Projects</a></li>
              <li><a href="blog.html">Blog</a></li>
              <li><a href="contact.html">Contact</a></li>
            </ul>
          </div>
          <div class="col-md-12">
            <ul class="top_infomation">
              <li>
                <a href="javascript:void(0)"
                  ><i><img src="/images/loc.png" alt="#" /></i
                ></a>
              </li>
              <li>
                <a href="javascript:void(0)"
                  ><i><img src="/images/call.png" alt="#" /></i
                ></a>
              </li>
              <li>
                <a href="javascript:void(0)"
                  ><i><img src="/images/mail.png" alt="#" /></i
                ></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="copyright">
        <div class="container">
          <div class="row d_flex">
            <div class="col-md-8">
              <p>
                Â© 2022 All Rights Reserved. Design by
